@page "/products"

<PageTitle>Product List</PageTitle>

<h3>Product List</h3>
<br />
<br />

<SearchComponent OnSearch="HandleSearch" />
<br />

<ProductListComponent SearchProductFilter="@SearchProductFilter" />

<a href="/addProduct" class="btn btn-primary">Add Product</a>

@code {
	public string SearchProductFilter { get; set; } = string.Empty;

	private void HandleSearch(string searchFilter)
	{
		SearchProductFilter = searchFilter;
	}
}
